<!-- res/drawable/edittext_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Inside color, set to white -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000" /> <!-- Transparent color for the inner rectangle -->
            <stroke
                android:width="2dp"
            android:color="#808080" /> <!-- Border color (gray), adjust as needed -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as needed -->
        </shape>
    </item>
</layer-list>
