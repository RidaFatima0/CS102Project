<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingscre"
    android:layout_width="393dp"
    android:layout_height="800dp"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >

    <RelativeLayout android:id="@+id/navbar"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_1_shape" />


        <ImageView
            android:id="@+id/applogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:contentDescription="applogo"
            android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_marginStart="0dp"
        android:layout_width="400dp"
        android:layout_height="800dp"
        >

        <ImageView android:id="@+id/profilepic"
            android:src="@drawable/image_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:layout_width="140dp"
            android:layout_height="140dp" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:textSize="18dp"
            android:text="Edit Profile Picture"
            android:textAppearance="Edit"
            android:gravity="top"
            />


    <TextView
        android:id="@+id/textView9"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="299dp"
        android:background="@drawable/border"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="text"
        android:text="   FIRST NAME"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="351dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:textSize="20dp"
        android:text="   LAST NAME"
        android:textColor="#808080" />

    <TextView
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="   PHONE"
        android:textSize="20dp"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="473dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="   EMAIL "
        android:textSize="20dp"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="531dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="   PASSWORD"
        android:textSize="20dp"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/confirmPassword"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="590dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="   CONFIRM PASSWORD"
        android:textSize="20dp"
        android:textColor="#808080" />

    <ImageView
        android:id="@+id/confirmPasswordIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="590dp"
        android:src="@drawable/Lock"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/rbutton"
        android:text="Save"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="531dp"
        android:src="@drawable/Lock"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="480dp"
        android:src="@android:drawable/ic_dialog_email"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="420dp"
        android:src="@android:drawable/stat_sys_phone_call"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="355dp"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="301dp"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:tint="@color/black" />

    </RelativeLayout>

</RelativeLayout>