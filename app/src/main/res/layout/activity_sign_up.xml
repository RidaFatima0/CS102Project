<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/signup"
    android:layout_width="393dp"
    android:layout_height="800dp"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >

    <RelativeLayout android:id="@+id/navbar"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_1_shape" />


        <ImageView
            android:id="@+id/applogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:contentDescription="applogo"
            android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/title"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="33dp"
            android:text="A GREEN DEAL"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/createaccount"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="149dp"
            android:text="Create Account"
            android:textStyle="bold"
            android:textSize="25dp"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/inputdetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:text="Please input your details here"
        android:textColor="#808080"
        android:textSize="20dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/firstNametextbox"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="299dp"
        android:background="@drawable/border"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="text"
        android:text="   FIRST NAME"
        android:textColor="#808080" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/lastNametextbox"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="351dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:textSize="20dp"
        android:text="   LAST NAME"
        android:textColor="#808080" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/phoneNumbertextbox"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="   PHONE"
        android:textSize="20dp"
        android:textColor="#808080" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/emailtextbox"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="473dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="   EMAIL "
        android:textSize="20dp"
        android:textColor="#808080" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordtextbox"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="531dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="   PASSWORD"
        android:textSize="20dp"
        android:textColor="#808080" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/confirmPasswordtextbox"
        android:layout_width="262dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="590dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:text="   CONFIRM PASSWORD"
        android:textSize="20dp"
        android:textColor="#808080" />

    <ImageView
        android:id="@+id/confirmPasswordIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="590dp"
        android:src="@drawable/lock"
        />

    <Button
        android:id="@+id/signuppagesinupbutton"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="135dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/rbutton"
        android:text="SIGN UP"
        android:textColor="#FFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logininstead"
        android:text="Click to Login Instead"
        android:layout_marginTop="700dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/passwordicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="531dp"
        android:src="@drawable/lock"/>

    <ImageView
        android:id="@+id/emailicon"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="480dp"
        android:src="@android:drawable/ic_dialog_email"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/phonenumbericon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="420dp"
        android:src="@android:drawable/stat_sys_phone_call"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/lastnameicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="355dp"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:tint="@color/black" />

    <ImageView
        android:id="@+id/firstnameicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="301dp"
        android:src="@android:drawable/ic_menu_my_calendar"
        android:tint="@color/black" />

</RelativeLayout>