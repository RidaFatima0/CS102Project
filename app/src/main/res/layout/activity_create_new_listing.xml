<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingscre"
    android:layout_width="393dp"
    android:layout_height="860dp"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >

    <RelativeLayout android:id="@+id/navbar"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_1_shape" />


        <ImageView
            android:id="@+id/applogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:contentDescription="applogo"
            android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="New Listing"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="382dp"
        android:textSize="18dp"
        android:text="Price/Year"/>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/priceFill"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/border"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="432dp"
        android:textSize="18dp"
        android:text="Description" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/descriptionFill"
        android:layout_width="165dp"
        android:layout_height="30dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/border"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/conditionText"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="476dp"
        android:textSize="16dp"
        android:text="Land Usage Condition" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/conditionFill"
        android:layout_width="165dp"
        android:layout_height="30dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="482dp"
        android:background="@drawable/border"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginStart="70dp"
        android:textSize="18dp"
        android:text="Location" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/locationFill"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_marginStart="190dp"
        android:layout_marginTop="537dp"
        android:background="@drawable/border"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="text"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/uploadImText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="337dp"
        android:textSize="16dp"
        android:text="Upload Image(s)"/>

    <ImageView
        android:id="@+id/uploadimageButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:background="@drawable/border"
        android:src="@drawable/uploadimage"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/confirmButton"
        android:layout_width="163dp"
        android:layout_height="43dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="590dp"
        app:srcCompat="@drawable/confirm" />

</RelativeLayout>
