<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingscre"
    android:layout_width="393dp"
    android:layout_height="860dp"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >

    <RelativeLayout android:id="@+id/navbar"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_1_shape" />


        <ImageView
            android:id="@+id/applogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:contentDescription="applogo"
            android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="New Listing"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/priceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="382dp"
        android:textSize="18dp"
        android:text="Price/Year"/>

    <EditText
        android:id="@+id/priceFill"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="362dp"
        android:ems="10"
        android:inputType="number"/>

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="432dp"
        android:textSize="18dp"
        android:text="Description" />


    <EditText
        android:id="@+id/descriptionFill"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="410dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/conditionText"
        android:layout_width="90dp"
        android:layout_height="47dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="476dp"
        android:textSize="16dp"
        android:text="Land Usage Condition" />

    <EditText
        android:id="@+id/conditionFill"
        android:layout_width="130dp"
        android:layout_height="48dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="466dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_marginStart="80dp"
        android:textSize="18dp"
        android:text="Location" />

    <EditText
        android:id="@+id/locationFill"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginStart="210dp"
        android:layout_marginTop="522dp"
        android:ems="10"
        android:inputType="textPostalAddress"/>

    <TextView
        android:id="@+id/uploadImText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="597dp"
        android:textSize="16dp"
        android:text="Upload Image(s)"/>

    <Button
        android:id="@+id/imageButton"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="590dp"
        android:background="@drawable/rbutton"
        android:textSize="11dp"
        android:text="Upload image(s)"
        android:textColor="#FFFFFF" />

    <ImageButton
        android:id="@+id/confirmButton"
        android:layout_width="163dp"
        android:layout_height="43dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="660dp"
        app:srcCompat="@drawable/confirm" />

</RelativeLayout>
