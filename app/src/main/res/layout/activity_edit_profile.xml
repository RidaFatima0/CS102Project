<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingscre"
    android:layout_width="393dp"
    android:layout_height="860dp"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >

    <RelativeLayout android:id="@+id/navbar"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_1_shape" />


        <ImageView
            android:id="@+id/applogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:contentDescription="applogo"
            android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="400dp"
        android:layout_height="800dp"
        >

        <ImageView android:id="@+id/profilepic"
            android:src="@drawable/image_3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:layout_width="140dp"
            android:layout_height="140dp" />

        <TextView
            android:id="@+id/editprofilepic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:textSize="18dp"
            android:text="Edit Profile Picture"
            android:gravity="top"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/firstNametextbox"
            android:layout_width="262dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="299dp"
            android:background="@drawable/border"
            android:ems="10"
            android:textSize="20dp"
            android:inputType="text"
            android:hint="   First Name"
            android:textColor="#808080" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lastNametextbox"
            android:layout_width="262dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="351dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:textSize="20dp"
            android:hint="   Last Name"
            android:textColor="#808080" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/phoneNumbertextbox"
            android:layout_width="262dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="410dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:hint="   Phone"
            android:textSize="20dp"
            android:textColor="#808080" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailtextbox"
            android:layout_width="262dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="473dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:hint="   Email "
            android:textSize="20dp"
            android:textColor="#808080" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordtextbox"
            android:layout_width="262dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="531dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:hint="   Password"
            android:textSize="20dp"
            android:textColor="#808080" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/confirmPasswordtextbox"
            android:layout_width="262dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="81dp"
            android:layout_marginTop="590dp"
            android:background="@drawable/border"
            android:ems="10"
            android:inputType="text"
            android:hint="   Confirm Password"
            android:textSize="20dp"
            android:textColor="#808080" />

        <ImageView
            android:id="@+id/confirmPasswordIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="590dp"
            android:src="@drawable/lock"
            />

        <Button
            android:id="@+id/savebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="650dp"
            android:background="@drawable/rbutton"
            android:text="Save"
            android:textColor="#FFFFFF" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="531dp"
            android:src="@drawable/lock"/>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="480dp"
            android:src="@android:drawable/ic_dialog_email"
            android:tint="@color/black" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="420dp"
            android:src="@android:drawable/stat_sys_phone_call"
            android:tint="@color/black" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="355dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:tint="@color/black" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="301dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:tint="@color/black" />

    </RelativeLayout>

</RelativeLayout>