<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadingscre"
    android:layout_width="400dp"
    android:layout_height="860dp"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >

    <RelativeLayout android:id="@+id/navbar"
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <View
            android:id="@+id/rectangle_1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rectangle_1_shape" />


        <ImageView
            android:id="@+id/applogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:contentDescription="applogo"
            android:src="@drawable/applogo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="33dp"
            android:text="A GREEN DEAL"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="92dp"
        android:layout_marginBottom="448dp"
        android:src="@drawable/logo" />

    <RelativeLayout android:id="@+id/emailpassword"
        android:layout_marginTop="15dp"
        android:layout_marginStart="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <EditText
        android:id="@+id/emailtextbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="457dp"
        android:background="@drawable/border"
        android:ems="10"
        android:inputType="text"
        android:hint="  Email Address"
        android:textColor="#808080"/>

    <EditText
        android:id="@+id/passwordtextbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="504dp"
        android:background="@drawable/border"
        app:passwordToggleEnabled="true"
        android:ems="10"
        android:hint="  Password"
        android:textColor="#808080"/>

    <ImageView
        android:id="@+id/locklogo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="488dp"
        android:contentDescription="applogo"
        android:src="@drawable/lock" />

    <ImageView
        android:id="@+id/emaillogo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="460dp"
        android:contentDescription="applogo"
        android:src="@drawable/email" />
</RelativeLayout>

    <Button
        android:id="@+id/loginpageloginbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="568dp"
        android:background="@drawable/rbutton"
        android:text="LOGIN"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginBottom="196dp"
        android:text="Or Sign-In with:"
        android:textColor="#808080" />

    <ImageButton
        android:id="@+id/googleicon"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginBottom="133dp"
        android:src="@drawable/google" />

    <ImageButton
        android:id="@+id/instaicon"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="139dp"
        android:layout_marginBottom="133dp"
        android:src="@drawable/instagram" />

    <ImageButton
        android:id="@+id/xicon"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginTop="670dp"
        android:layout_marginStart="193dp"
        android:src="@drawable/x" />

    <ImageButton
        android:id="@+id/fbicon"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginStart="250dp"
        android:layout_marginTop="669dp"
        android:src="@drawable/fb" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginBottom="102dp"
        android:text="Donâ€™t have an account?"
        android:textColor="#808080" />

    <TextView
        android:id="@+id/signupinstead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="738dp"
        android:background="@drawable/transparent"
        android:text="Sign Up"
        android:textStyle="bold"/>

</RelativeLayout>

